.banner{position:relative;width:100%}.banner__swiper{width:100%;height:100%}.banner__media{width:100%;height:100%}.banner__img{width:100%;height:100%}.banner__video{width:100%;height:100%}.banner-dots{position:absolute;left:50%;bottom:20rpx;display:flex;flex-direction:row;justify-content:center;transform:translateX(-50%)}.banner-dots__spot{width:10rpx;height:10rpx;margin-right:10rpx;border-radius:50%;background-color:#ccc}.banner-dots__spot:last-child{margin-right:0}.banner-dots__active{width:28rpx;height:10rpx;border-radius:5rpx;background:#fff}
