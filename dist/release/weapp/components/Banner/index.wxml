<view class="banner" style="height: {{height}}">
  <swiper
    class="banner__swiper"
    indicator-dots="{{false}}"
    circular="true"
    autoplay="true"
    interval="5000"
    duration="500"
    current="{{current}}"
    bindchange="handleChangeCurrent"
  >
    <block wx:for="{{componentData}}" wx:key="index">
      <swiper-item catchtouchmove="{{ componentData.length === 1 ? 'stopTouchMove' : '' }}">
        <view bind:tap="handleBannerTap" data-index="{{index}}" data-item="{{item}}" class="banner__media">
          <video wx:if="{{item.isVideo}}" src="{{item.src}}" class="banner__video" />
          <image wx:else class="banner__img" src="{{item.src}}" />
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="banner-dots" wx:if="{{ componentData.length > 1 }}" style="bottom: {{dotBottom || '20rpx'}};">
    <block wx:for="{{ componentData }}" wx:key="index">
      <view
        class="banner-dots__spot {{index === indicator ? 'banner-dots__active' : '' }}"
        style="{{index === indicator ? '' : ('background: ' + dotColor + ';')}}"
      ></view>
    </block>
  </view>
</view>
